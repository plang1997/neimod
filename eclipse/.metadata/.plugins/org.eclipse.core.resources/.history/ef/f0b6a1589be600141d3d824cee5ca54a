//        {
//            --itemStackIn.stackSize;
//        }
//
//        worldIn.playSoundAtEntity(playerIn, "random.bow", 0.5F, 0.4F / (itemRand.nextFloat() * 0.4F + 0.8F));
//
//        if (!worldIn.isRemote)
//        {
//            worldIn.spawnEntityInWorld(new EntitySnowball(worldIn, playerIn));
//        }
