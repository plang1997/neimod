package com.patricklang.tutorial.items;

import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.init.Items;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;

import com.patricklang.tutorial.TutorialMod;
import com.patricklang.tutorial.entity.EntityBlasterBolt;

public class ItemMtnBlaster extends Item{

	public ItemMtnBlaster(){
		super();
		setCreativeTab(TutorialMod.tooManyItemsTab);
		setUnlocalizedName("MountainBlaster");	
	}
	
    /**
     * Called whenever this item is equipped and the right mouse button is pressed. Args: itemStack, world, entityPlayer
     */
//    public ItemStack onItemRightClick(ItemStack itemStackIn, World worldIn, EntityPlayer playerIn)
//    {
